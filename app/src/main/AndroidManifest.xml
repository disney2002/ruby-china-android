<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testerhome.android"
    android:hardwareAccelerated="true"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.testerhome.android.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.testerhome.android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.testerhome.android.TopicActivity"
            android:label="话题"
            android:parentActivityName="com.testerhome.android.MainActivity" />
        <activity
            android:name="com.testerhome.android.EmptyActivity"
            android:parentActivityName="com.testerhome.android.MainActivity" />
        <activity
            android:name="com.testerhome.android.TopicNewActivity"
            android:label="新话题"
            android:parentActivityName="com.testerhome.android.MainActivity" />
        <activity
            android:name="com.testerhome.android.TopicEditActivity"
            android:label="编辑话题" />
        <activity
            android:name="com.testerhome.android.ReplyEditActivity"
            android:label="编辑回复" />
        <activity
            android:name="com.testerhome.android.SettingsActivity"
            android:label="设置"
            android:parentActivityName="com.testerhome.android.MainActivity" />


        <activity
            android:name="com.testerhome.android.ShoucangActivity"
            android:label="收藏"
            android:parentActivityName="com.testerhome.android.MainActivity" />

        <activity
            android:name="com.testerhome.android.TongZhiActivity"
            android:label="通知"
            android:parentActivityName="com.testerhome.android.MainActivity" />

        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SignInActivity"
            android:label="登录"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>